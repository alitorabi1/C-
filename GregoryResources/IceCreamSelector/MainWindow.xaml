<Window x:Class="IceCreamSelector.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <ListView MouseDoubleClick="lvAvailable_MouseDoubleClick" x:Name="lvAvailable" SelectionMode="Single" Margin="48,84,368.4,66.4">
        <ListViewItem Content="Vanilla"/>
            <ListViewItem Content="Chocolate"/>
            <ListViewItem Content="Stawberry"/>
            <ListViewItem Content="Pistachios"/>
            <ListViewItem Content="Cookie cream"/>
        </ListView>
        <Label Content="Available flavours" HorizontalAlignment="Left" Margin="48,42,0,0" VerticalAlignment="Top"/>
        <Button Click="ButtonAdd_Click" Content="-&gt; Add" HorizontalAlignment="Left" Margin="169,101,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="btRemove"  Click="ButtonRemove_Click" Content="Remove &lt;-" HorizontalAlignment="Left" Margin="169,161,0,0" VerticalAlignment="Top" Width="75"/>
        <ListView MouseDoubleClick="lvChoosen_MouseDoubleClick" x:Name="lvChoosen" Margin="278,84,119.4,66.4"/>
        <Label Content="My ice cream (max 3 flavours)" HorizontalAlignment="Left" Margin="278,42,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
