            </MenuItem>
        </Menu>
        <DataGrid x:Name="dgAnimals" IsReadOnly="True" SelectionMode="Single" Height="290" Margin="0,0,0.4,0.4" VerticalAlignment="Bottom" />
    </Grid>
</Window>
