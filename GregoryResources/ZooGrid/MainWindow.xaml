        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Menu HorizontalAlignment="Left" Height="27" VerticalAlignment="Top" Width="518">
            <MenuItem Header="File">
                <MenuItem Header="Open..." Click="MenuOpen_Click"/>
